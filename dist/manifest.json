{
  "name": "Urban Lyrics",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A Chrome extension to view lyrics.",
  "homepage_url": "https://www.linkedin.com/in/leon-li1/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Urban Lyrics",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*",
    "https://fonts.googleapis.com/*",
    "https://www.youtube.com/*",
    "https://api.genius.com/*"
  ],
  "content_security_policy": "default-src 'self'; connect-src *; script-src-elem * ; style-src 'self' data: 'unsafe-inline'; img-src *",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ]
}
