{
  "name": "Urban Lyrics",
  "version": "2.2",
  "manifest_version": 3,
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "description": "A Chrome extension to view lyrics.",
  "icons": {
    "16": "icons/UrbanLyrics-16.png",
    "48": "icons/UrbanLyrics-48.png",
    "128": "icons/UrbanLyrics-128.png"
  },
  "action": {
    "default_title": "Urban Lyrics",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://fonts.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src *; font-src *; style-src-elem * 'unsafe-inline'; script-src-elem * ; style-src 'unsafe-inline'; script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "incognito": "not_allowed"
}
